{
  "name": "Spotify Select",
  "description": "Simple plugin that allows highlighted text to be converted to a spotify playlist",
  "version": "0.1.1",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "tabs",
    "identity",
    "storage"
  ],
 "content_scripts": [{
     "js": ["popup.js"],
     "matches": ["http://*/*", "https://*/*"]
 }],  
  "background": {
    "scripts": ["spotify.js", "selection.js", "spotify_atoms.js", "oauth.js"]
  },
  "externally_connectable": {
    "ids": ["*"],
   "matches": [
      "*://*.reddit.com/*"
    ]    
  },
  "manifest_version": 2
}
